<h2>Categories</h2>
<table>
 <thead>
   <tr>
     <th>Category Name</th>
     <th>   </th>
     <th>Actions</th>
   </tr>
 </thead>


   <% @categories.each do |category| %>
     <tr>
       <td><%= category.name %></td>
       <td>   </td>
       <td><%= link_to 'Edit', edit_category_path(category.id) %>  |  <%= link_to 'Delete' , category_path(category), method: :delete, data: {confirm: 'Are you sure?'} %></td>
     </tr>
   <% end %>

</table>
